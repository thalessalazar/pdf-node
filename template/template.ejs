<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        @media print {
            body {
                margin: 0;
                padding: 0;
                font-family: 'Calibri';
                font-weight: 500;
                font-size: 15px;
                -webkit-print-color-adjust: exact;
                box-sizing: border-box;
            }

            .text-center {
                text-align: center;
            }

            .page {
                margin: 0;
                height: 100%;
                width: 100%;
            }
            .tabela-produto {
                margin: 0 10 3 10;
                text-align: center;
                font-size: 13px;
            }
            .tebela {
                width: 100%;
            }
        }
    </style>
</head>

<body>

    <div class="page">
        <div class="text-center"> GERANDO PDF COM NODEJS </div>
        <div class="text-center"> por: <%= nome %></div>
        <div class="tabela-produto">
            <table class="tebela">
                <% produtos.forEach(produto => { %>
                    <tr>
                        <td><%= produto.sequencia %></td>
                        <td><%= produto.descricao %></td>
                        <td><%= produto.quantidade %></td>
                        <td><%= produto.valorUnitario%></td>
                        <td><%= produto.valorTotal%></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>

</body>

</html>